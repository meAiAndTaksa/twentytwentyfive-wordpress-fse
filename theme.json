{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "custom": false,
            "customGradient": false,
            "palette": [
                {
                    "slug": "background",
                    "color": "#ffffff",
                    "name": "Background"
                },
                {
                    "slug": "foreground",
                    "color": "#333333",
                    "name": "Foreground"
                },
                {
                    "slug": "primary",
                    "color": "#007cba",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#e5e5e5",
                    "name": "Secondary"
                }
            ]
        },
        "typography": {
            "customFontSize": false,
            "customLineHeight": false,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, sans-serif",
                    "name": "Inter",
                    "slug": "inter",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": "file:./assets/fonts/Inter-Regular.ttf"
                        }
                    ]
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        }
    },
    "styles": {
        "blocks": {
            "core/post-title": {
                "typography": {
                    "fontFamily": "var:preset|font-family|inter",
                    "fontSize": "clamp(2.5rem, 5vw, 3.5rem)"
                }
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var:preset|color|primary"
                }
            }
        }
    },
    "customTemplates": [
        {
            "title": "Single Neiro Chat (Кастомный)",
            "postTypes": ["neiro_chat"],
            "slug": "single-neiro_chat"
        }
    ]
}